import tkinter as tk
import time

def update_clock():
    current_time = time.strftime('%H:%M:%S')  # Format: 24-hour clock
    label.config(text=current_time)
    label.after(1000, update_clock)  # update every second

# Create the main window
root = tk.Tk()
root.title('Digital Clock')

# Clock display styling
label = tk.Label(root, font=('Arial', 60), bg='black', fg='lime')
label.pack(anchor='center', pady=40)

# Start the clock update loop
update_clock()

# Run the GUI loop
root.mainloop()
